@model MoviesCatalogueSopro.Models.Library

@{
    ViewData["Title"] = "Details Of Libraries";
}

<h1>Details Of Libraries</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div class="listButtonDetails">
    <a asp-action="Index">Back to List</a>
</div>

<h2>List of movies: </h2>
<ul>
    @foreach (var item in Model.movies)
    {
        <li>
            <a href="/Movies/Details/@item.Id">@item.Title</a>
        </li>
    }
</ul>